<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.example.ridecellexample.presentation.characterlist.CharacterListFragment"
        android:label="CharacterListFragment">
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.ridecellexample.presentation.characterDetail.CharacterDetailFragment"
        android:label="CharacterDetailFragment">
        <argument
            android:name="selected_character"
            app:argType="com.example.ridecellexample.data.model.CharacterData" />
    </fragment>
</navigation>